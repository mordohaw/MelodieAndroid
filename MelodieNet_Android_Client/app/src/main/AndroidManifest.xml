<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fsa.williammordohay.melodienet_android_client">

    <!-- Ajout des permissions pour utiliser internet dans l'application -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- On met le logo de melodie comme icone de l'application -->
    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_melodie"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activites.ActiviteMenu" />
        <activity android:name=".activites.ActiviteLancement">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activites.ActiviteAuthent" />
        <activity android:name=".parametres.VueParametres" />
        <activity android:name=".activites.ActiviteProductionParam" />
        <activity android:name=".activites.ActiviteMachinesParam" />
        <activity android:name=".activites.ActiviteModesMarche" />
        <activity android:name=".activites.ActiviteProduction"></activity>
    </application>

</manifest>